{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",       // matches Vite's output folder
        "buildCommand": "npm run build" 
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }  // SPA redirect for client-side routing
  ]
}
